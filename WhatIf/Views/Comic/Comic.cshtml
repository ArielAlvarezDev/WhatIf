@model WhatIf.ViewModels.XkcdComicVM


<div class="row">
    <div class="span6" style="float: none; margin: 0 auto;">
        <h2>@Model.Comic.Safe_Title</h2>
        <img src="@Url.Content(Model.Comic.Img)" alt="@Model.Comic.Alt" />
        <p>@Model.Comic.Alt</p>
    </div>

    @if (Model.PrevId > 0)
    {
        var action = Html.ActionLink("Previous", "Comic", new { @idComic = Model.PrevId }, new { @class = "btn btn-default" });
        Write(action);
    }

    @if (Model.NextId > 0)
    {
        var raw = Html.Raw(Html.ActionLink("Next", "Comic",  new { @idComic = Model.NextId }, new { @class = "btn btn-default" }));
        Write(raw);
    }

</div>